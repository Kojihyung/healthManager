<script type="text/javascript">
    var submitFlag = false;
    function postCheck(form){
      if(form.title.value == 0){
        alert('제목을 입력해주세요.');
        form.title.focus();
        return false;
      }
      if(form.content.value == 0){
        alert('내용을 입력해주세요.');
        form.content.focus();
        return false;
      }
      return true;
    }
  
    function formCheck(form){
        
      if(postCheck(form)){
        if(form.submitted) return false;
        // 얘 하면 다시 돌아오는데? 음 으응ㅁ??
        form.action = '';
        form.method = 'POST';
        form.submitted = true;

        return true;
      }
      
      return false;
    }
    
  </script>

<body>
    <div class = "inputInfos">
        <form name = "infos" action = "/add-member" method = "POST" onsubmit="return formCheck(this)">
            <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  name="title"
                  id="title"
                  placeholder="제목을 입력해 주세요."
                />
              </div>
              <div class="form-group">
                <textarea
                  class="form-control"
                  name="content"
                  id="write-contents"
                  rows="19"
                  placeholder="내용을 입력해 주세요."
                ></textarea>
                <input type="submit"  class="btn btn-primary btn-sm" value="글쓰기"/>
              </div>

        </form>
    </div>
</body>
